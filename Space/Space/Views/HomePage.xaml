<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Space.Views.HomePage"
             Title="Space">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="10">
            <Button Text="Traditional XAML" 
                    x:Name="ButtonTraditional"
                    VerticalOptions="Center"
                    Clicked="ButtonTraditionalClicked"/>
            <Button Text="Data Pages" 
                    x:Name="ButtonDataPages"
                    VerticalOptions="Center"
                    Clicked="ButtonDataPagesClicked"/>

            <Button Text="Hello world"/>
            <Switch Margin="10,30" IsToggled="false"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>